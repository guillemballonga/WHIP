<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde_evento"
    android:orientation="vertical"
    tools:context=".Views.InfoPostLost">

    <include
        android:id="@+id/toolbar_info_event"
        layout="@layout/toolbar" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/foto_post_provinente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/perfilperro" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titulo_post_provinente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#434040"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fecha_post_provinente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#434040"
                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/fechaMayuscula"
                    android:textColor="@color/blanco"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fecha_info_quedada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textColor="#434040"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/HORA"
                    android:textColor="@color/blanco"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/hora_info_quedada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textColor="#434040"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/LUGAR"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/blanco"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/lugar_info_quedada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#434040"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="SOLICITADA POR:"
                    android:textColor="@color/blanco"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/id_creadorQuedada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#434040"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SOLICITADA A:"
                    android:textColor="@color/blanco"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/id_destinatarioQuedada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#434040"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/contenido_postPerd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#434040"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/boto_acceptar_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/botonredondopeq"
                android:text="@string/aceptar"
                android:textColor="@color/blanco"
                android:textSize="19sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/boto_rebutjar_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:background="@drawable/botonredondopeq"
                android:text="@string/rechazar"
                android:textColor="@color/blanco"
                android:textSize="19sp"
                tools:ignore="ButtonStyle" />
            <Button
                android:id="@+id/boto_replanificar_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:background="@drawable/botonredondopeq"
                android:text="@string/replanificar"
                android:textColor="@color/blanco"
                android:textSize="18sp"
                tools:ignore="ButtonStyle" />
        </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>