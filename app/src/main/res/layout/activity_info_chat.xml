<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.InfoChat"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_listadoMessages"
        layout="@layout/toolbar" />


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout_messages"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/contenedor_messages"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/box_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="@string/a_ade_un_mensaje" />

            <Button
                android:id="@+id/enviar_mensaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/boton_comment"
                android:text="@string/crear"
                android:textColor="@color/blanco"
                android:textSize="15sp"
                tools:ignore="SmallSp" />

            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />


        </LinearLayout>


    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>