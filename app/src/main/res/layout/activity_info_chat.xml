<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".Views.InfoChat">

    <include
        android:id="@+id/toolbar_listadoMessages"
        layout="@layout/toolbar" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/contenedor_messages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="4"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/box_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/a_ade_un_mensaje" />

        <Button
            android:id="@+id/enviar_mensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/botonredondopeq"
            android:text="@string/crear"
            android:textColor="@color/blanco"
            android:textSize="15sp"
            tools:ignore="SmallSp" />


    </LinearLayout>

</LinearLayout>