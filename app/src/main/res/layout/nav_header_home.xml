<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="#FFCCBC"
    android:gravity="bottom"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/foto_navegation_header"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/icono_usuario"
            android:contentDescription="@string/todo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombre_navegation_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombre_real" />

            <TextView
                android:id="@+id/user_navegation_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/user" />

            <TextView
                android:id="@+id/correo_navegation_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/correo" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>