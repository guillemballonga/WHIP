<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MostrarPerfil">


    <include layout="@layout/toolbar"
        android:id="@+id/toolbar_mostrarPerfil"/>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="40dp">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center">


                <com.master.glideimageview.GlideImageView
                    android:id="@+id/imagen_perfil"
                    android:layout_width="match_parent"
                    android:layout_height="156dp"

                    app:error_res="@drawable/icono_usuario"
                    android:src="@drawable/icono_usuario"
                    app:placeholder_res="@drawable/cargando"
                    app:show_progress="false"
                    />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginTop="60dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/camp_nom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/botonrosa"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="Nombre"/>

                    <TextView
                        android:id="@+id/escr_nom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/perfilblanc"
                        android:gravity="center" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/camp_cognom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/botonrosa"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="Apellido"/>

                    <TextView
                        android:id="@+id/escr_cognom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/perfilblanc"
                        android:gravity="center"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="20dp">


                    <TextView
                        android:id="@+id/camp_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/botonrosa"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="Username"/>
                    <TextView
                        android:id="@+id/escr_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/perfilblanc"
                        android:gravity="center"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="20dp">


                    <TextView
                        android:id="@+id/camp_correu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/botonrosa"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="Correo" />
                    <TextView
                        android:id="@+id/escr_correu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/perfilblanc"
                        android:gravity="center"
                        />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/camp_CP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/botonrosa"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="C.P." />

                    <TextView
                        android:id="@+id/escr_CP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/perfilblanc"
                        android:gravity="center"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/boto_editar_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/botonredondopeq"
                    android:text="EDITAR PERFIL"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/boto_mis_posts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/botonredondopeq"
                    android:text="MIS POSTS"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"/>


                <Button
                    android:id="@+id/boto_mis_mensajes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/botonredondopeq"
                    android:text="MENSAJES"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_weight="1"/>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>